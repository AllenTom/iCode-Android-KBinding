<PreferenceScreen xmlns:android='http://schemas.android.com/apk/res/android'>
    <com.rayfantasy.icode.ui.preference.PreferenceCategory android:title='@string/action_settings'>
        <Preference
            android:key="pref_clear_cache"
            android:summary="@string/pref_summary_clear_cache"
            android:title="@string/pref_title_clear_cache" />
    </com.rayfantasy.icode.ui.preference.PreferenceCategory>

    <com.rayfantasy.icode.ui.preference.PreferenceCategory android:title="@string/pref_theme">
        <ListPreference
            android:key="pref_theme"
            android:title="@string/pref_theme"
            android:entries="@array/pref_entries_theme"
            android:entryValues="@array/pref_values_theme"
            android:defaultValue="1" />

        <ListPreference
            android:key="pref_highlight"
            android:title="@string/pref_theme_highlight" />
    </com.rayfantasy.icode.ui.preference.PreferenceCategory>

    <com.rayfantasy.icode.ui.preference.PreferenceCategory android:title='@string/pref_other'>
        <Preference
            android:key="licenses"
            android:summary="@string/license_summary"
            android:title="@string/license_title" />
    </com.rayfantasy.icode.ui.preference.PreferenceCategory>

</PreferenceScreen>
